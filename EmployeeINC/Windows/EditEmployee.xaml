<Window x:Class="EmployeeINC.Windows.EditEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:EmployeeINC.Windows"
        mc:Ignorable="d"
        Title="EditEmployee" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid Background="#1a1f25">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Фамилия" Foreground="White" FontSize="24"/>
                <TextBox FontSize="24" Name="Фамилия"/>
                
                <TextBlock Text="Имя" Foreground="White" FontSize="24"/>
                <TextBox FontSize="24" Name="Имя"/>
                
                <TextBlock Text="Отчество" Foreground="White" FontSize="24"/>
                <TextBox FontSize="24" Name="Отчество"/>

                <TextBlock Text="Телефон" Foreground="White" FontSize="24"/>
                <TextBox FontSize="24" Name="Телефон"/>
                
                <TextBlock Text="Отдел" Foreground="White" FontSize="24"/>
                <ComboBox FontSize="24" Name="Отдел"/>
                
                <TextBlock Text="Должность" Foreground="White" FontSize="24"/>
                <ComboBox FontSize="24" Name="Должность"/>
                
                <TextBlock Text="Дата начала работы" Foreground="White" FontSize="24"/>
                <TextBox FontSize="24" Name="ДатаНачалаРаботы"/>
            </StackPanel>
        </ScrollViewer>
        <Button Grid.Row="1" Style="{StaticResource RoundButton}" Margin="15" Click="SaveEdited">
            <TextBlock Text="Сохранить" Foreground="White" FontSize="24"/>
        </Button>
    </Grid>
</Window>